<resources>

    <style name="AppTheme_light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="overview_card_background">@color/overview_card_background_light</item>
        <item name="default_card_background">@color/window_background_light</item>
        <item name="bottom_sheet_background">@color/bottom_sheet_background_light</item>
        <item name="top_rounded_background">@drawable/top_rounded_background_light</item>
        <item name="button_style">@style/button_style_light</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme_dark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="overview_card_background">@color/overview_card_background_dark</item>
        <item name="default_card_background">@color/window_background_dark</item>
        <item name="bottom_sheet_background">@color/bottom_sheet_background_dark</item>
        <item name="top_rounded_background">@drawable/top_rounded_background_dark</item>
        <item name="button_style">@style/button_style_dark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <attr name="overview_card_background" format="reference" />
    <attr name="default_card_background" format="reference" />
    <attr name="bottom_sheet_background" format="reference" />
    <attr name="top_rounded_background" format="reference" />
    <attr name="rounded_background" format="reference" />
    <attr name="button_style" format="reference" />



    <!-- ****************** Text appearance ******************* -->

    <!-- Large fonts -->

    <style name="TextLargeRegularAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextLargeSemiBoldAppearance">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextLargeBoldAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>


    <!-- Medium large fonts -->

    <style name="TextMediumLargeRegularAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextMediumLargeSemiBoldAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextMediumLargeBoldAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>


    <!-- Medium fonts -->

    <style name="TextMediumRegularAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextMediumSemiBoldAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextMediumBoldAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>


    <!-- Small fonts -->

    <style name="TextSmallRegularAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextSmallSemiBoldAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextSmallBoldAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>


    <!-- XSmall fonts -->

    <style name="TextXSmallRegularAppearance">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextXSmallSemiBoldAppearance">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextXSmallBoldAppearance">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>


    <!-- Secondary fonts -->

    <style name="TextSecondaryMediumSemiBoldAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/text_color_secondary_gray</item>
    </style>
    <style name="TextSecondarySemiBoldAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/text_color_secondary_gray</item>
    </style>

    <style name="TextSecondarySemiBoldAppearance.">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/text_color_secondary_gray</item>
    </style>
    <style name="TextSecondaryAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/text_color_secondary_gray</item>
    </style>

    <style name="TextSecondarySmallAppearance">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/text_color_secondary_gray</item>
    </style>


    <!-- *********************** Button styles ************************** -->

    <style name="button_style_light">
        <item name="android:background">@drawable/rounded_background_light</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>
    <style name="button_style_dark">
        <item name="android:background">@drawable/rounded_background_dark</item>
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <style name="edittext_style" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/text_color_secondary_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>


</resources>