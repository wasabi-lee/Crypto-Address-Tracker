<resources>

    <!-- Base application theme. -->
    <style name="AppTheme_light" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTheme_dark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.AppCompat.TextHeaderAppearance">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.AppCompat.TextSecondaryAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_secondary_gray</item>
    </style>



</resources>