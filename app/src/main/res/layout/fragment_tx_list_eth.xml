<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="io.incepted.cryptoaddresstracker.viewModels.DetailViewModel" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.TxListEthFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tx_eth_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/no_ethereum_transactions_found"
            style="@style/TextSecondaryMediumSemiBoldAppearance"
            android:visibility="@{viewmodel.noEthTxFound ? View.VISIBLE : View.GONE}"/>

    </FrameLayout>

</layout>